# Database Configuration
DATABASE_URL=mysql+pymysql://user:password@mariadb:3306/arkrelay

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production

# Application Configuration
APP_PORT=8000
APP_HOST=0.0.0.0
SERVICE_TYPE=web

# Logging
LOG_LEVEL=INFO

# MariaDB Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=arkrelay
MYSQL_USER=user
MYSQL_PASSWORD=password

# Bitcoin Network Configuration
BITCOIN_NETWORK=testnet

# ARK Configuration
ARKD_HOST=localhost
ARKD_PORT=10009
ARKD_TLS_CERT=/path/to/arkd/tls.cert
ARKD_MACAROON=/path/to/arkd/admin.macaroon

# TAPD Configuration
TAPD_HOST=localhost
TAPD_PORT=10029
TAPD_TLS_CERT=/path/to/tapd/tls.cert
TAPD_MACAROON=/path/to/tapd/admin.macaroon

# LND Configuration
LND_HOST=localhost
LND_PORT=10009
LND_TLS_CERT=/path/to/lnd/tls.cert
LND_MACAROON=/path/to/lnd/admin.macaroon

# Nostr Configuration
NOSTR_RELAYS=wss://relay.damus.io,wss://nos.lol,wss://nostr-pub.wellorder.net
NOSTR_PRIVATE_KEY=your-nostr-private-key-hex

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_SESSIONS=100

# VTXO Configuration
VTXO_EXPIRATION_HOURS=24
VTXO_MIN_AMOUNT_SATS=1000

# Fee Configuration
FEE_SATS_PER_VBYTE=10
FEE_PERCENTAGE=0.001

# gRPC Configuration
GRPC_MAX_MESSAGE_LENGTH=4194304
GRPC_TIMEOUT_SECONDS=30

# Security Configuration
ENCRYPTION_KEY=your-32-byte-encryption-key-here
ENABLE_ENCRYPTION=true

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=8080